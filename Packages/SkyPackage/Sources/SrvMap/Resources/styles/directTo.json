{
  "layers": [
    {
      "id": "directTo",
      "minzoom": 1.0,
      "type": "line",
      "source-layer": "directTo",
      "paint": {
        "line-dasharray": [1.2,0.5],
        "line-color": "directto_line",
        "line-width": 8
      }
    },
    {
      "id": "directToLabel",
      "type": "symbol",
      "iosFilter": "tp == 'course'",
      "minzoom": 3.5,
      "source-layer": "directTo",
      "layout": {
        "text-offset": [0.1, 0],
        "text-allow-overlap": false,
        "text-rotation-alignment": "map",
        "text-rotate": ["to-number", ["get", "lbl_a"]],
        "text-font": ["Open Sans Bold"],
        "text-size": 16,
        "text-max-width": 25,
        "text-field": ["to-string", ["get", "name"]],
        "icon-text-fit": "both",
        "icon-allow-overlap": false,
        "icon-rotation-alignment": "map",
        "icon-rotate":["to-number", ["get", "ic_a"]],
        "icon-text-fit-padding": [2, 8, 2, 11],
        "icon-image": "directto_label_one_way"
      },
      "paint": {
        "text-color": "directto_label"
      }
    },
    {
      "id": "directTo_ARP",
      "type": "symbol",
      "iosFilter": "tp == 'AH'",
      "source-layer": "directTo",
      "minzoom": 1.0,
      "layout": {
        "icon-ignore-placement":true,
        "icon-allow-overlap": true,
        "icon-size": ["interpolate", ["linear"], ["zoom"], 1.0, 0.9, 7, 1.2, 9, 1.35],
        "icon-image": "routeAirport",
        "text-allow-overlap": false,
        "text-optional":true,
        "text-anchor": "top",
        "text-offset": [0, 1.3],
        "text-font": ["Open Sans Bold"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 1.0, 12, 7, 16, 9, 17],
        "text-field": [
          "step",
          ["zoom"],
          "",
          5.5, ["get", "nm"],
          8, ["format", ["get", "nm"], {}, ["concat", "\n", ["get", "nl_en"]], { "font-scale": 0.75 }],
          11, ["get", "nm"]
        ]
      },
      "paint": { "text-color": "route_ARP_LABEL", "text-halo-color": "route_TEXT_HALO", "text-halo-width": 1.2 }
    },
    {
      "id": "directTo_Nav",
      "type": "symbol",
      "mapFilter": "Route",
      "minzoom": 1.0,
      "iosFilter": "table == 'Nav'",
      "source-layer": "directTo",
      "layout": {
        "icon-ignore-placement":true,
        "icon-allow-overlap": true,
        "icon-size": ["interpolate", ["linear"], ["zoom"], 1.0, 0.9, 4.5, 1.35],
        "icon-image": [
          "case",
          ["==", ["get", "tp"], "DME_ROOT"], "dme<theme>",
          ["==", ["get", "tp"], "VORDME_ROOT"], "vordme<theme>",
          ["==", ["get", "tp"], "VOR_ROOT"], "vor<theme>",
          ["==", ["get", "tp"], "VORTAC_ROOT"], "vortac<theme>",
          ["==", ["get", "tp"], "NDB_ROOT"], "ndb<theme>",
        ""],
        "text-size": ["interpolate", ["linear"], ["zoom"], 1.0, 10, 8, 14, 9, 16, 11, 22],
        "text-offset": [0, 1.5],
        "text-anchor": "top",
        "text-optional":true,
        "text-allow-overlap": false,
        "text-font": ["Open Sans Bold"],
        "text-field": ["step", ["zoom"], "", 1.0, ["concat", ["get", "nm"], " ", ["get", "tf"]],
          9, ["case", ["has", "nl_en"], ["concat", ["to-string", ["get", "nl_en"]], "\n", ["get", "nm"], " ", ["get", "tf"]],
            ["concat", ["get", "nm"], " ", ["get", "tf"]]
          ]
        ]
      },
      "paint": {
        "text-color": "route_NAV",
        "text-halo-color": "route_TEXT_HALO",
        "text-halo-width": 1.5
      }
    },
    
    {
      "id": "directTo_POI",
      "type": "symbol",
      "minzoom": 1,
      "mapFilter": "Route",
      "iosFilter": "table == 'POI'",
      "source-layer": "directTo",
      "layout": {
        "text-allow-overlap": false,
        "text-optional":true,
        "text-anchor": "top",
        "text-offset": [0, 1.5],
        "text-font": ["Open Sans Bold"],
        "text-size": 16,
        "text-field": ["to-string", ["get", "nm"]],
        "icon-ignore-placement":true,
        "icon-allow-overlap": true,
        "icon-size": 1.1,
        "icon-image": "wpt_request"
      },
      "paint": {
        "text-color": "tpt_wo_dim",
        "text-halo-color": "TEXT_HALO",
        "text-halo-width": 1.2
      }
    },
    
    {
      "id": "directTo_Wpt",
      "type": "symbol",
      "mapFilter": "Route",
      "source-layer": "directTo",
      "iosFilter": "table == 'Waypoint'",
      "minzoom": 1.0,
      "layout": {
        "icon-ignore-placement":true,
        "icon-allow-overlap": true,
        "icon-size": 1,
        "icon-image": [
          "case",
          ["==", ["get", "tp"], "COORD"], "wpt_request<theme>",
          ["==", ["get", "tp"], "WPT_ON_REQUEST"], "wpt_request<theme>",
          ["==", ["get", "tp"], "WPT_ON_REQUEST_ROOT"], "wpt_request<theme>",
          ["==", ["get", "tp"], "WPT_COMPULSORY_ROOT"], "wpt_compulsory<theme>",
          ["==", ["get", "tp"], "WPT_COMPULSORY"], "wpt_compulsory<theme>",
          ["==", ["get", "tp"], "WPT_ON_REQUEST_SID"], "highlighted_blue_wpt_request<theme>",
          ["==", ["get", "tp"], "WPT_COMPULSORY_SID"], "highlighted_blue_wpt_compulsory<theme>",
          ["==", ["get", "tp"], "WPT_ON_REQUEST_STAR"], "highlighted_green_wpt_request<theme>",
          ["==", ["get", "tp"], "WPT_COMPULSORY_STAR"], "highlighted_green_wpt_compulsory<theme>",
        ""],
        "text-allow-overlap": false,
        "text-anchor": "top",
        "text-optional":true,
        "text-offset": [0, 1],
        "text-font": ["Open Sans Bold"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 1.0, 12, 8, 14, 9, 16],
        "text-field": [ "step", ["zoom"], "", 1.0, ["get", "nm"]],
      },
      "paint": {
        "text-color": "route_TPT",
        "text-halo-color": "route_TEXT_HALO",
        "text-halo-width": 1.2
      }
    },
  ]
}
